<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.halcyonmobile.adoption">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".authentication.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.AddPetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pet.PetDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pet.ManagePetsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pet.EditPetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".chat.MessagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pet.SearchPetActivity"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".pet.MyPetsActivity" />
        <activity android:name=".profile.UserDetailActivity" />
        <activity android:name=".profile.SearchUserActivity" />
        <activity android:name=".pet.FilterBySpeciesActivity" />
        <activity android:name=".pet.RecommendedActivity" />
    </application>

</manifest>